@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (Model.MessageSent)
{
    <div class="alert alert-success">
        Si un compte est associé à cette adresse e-mail, un lien de réinitialisation vous a été envoyé.
    </div>
}
else
{
    <form method="post">
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
            <label asp-for="Input.Email" class="form-label">Adresse e-mail</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Envoyer le lien de réinitialisation</button>
    </form>
}
