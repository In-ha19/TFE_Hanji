@page
@model Gestionnaire_Collections.Pages.Messages.DetailsModel

@{
    ViewData["Title"] = "Détails du message";
}

<h1>Informations sur le message</h1>

<div>
    <h4>Objet du message : @Model.Message.MessageObjet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Message.Date.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Statut)
        </dt>
        <dd class="col-sm-10">
            @{
                var statutText = Model.Message.Statut switch
                {
                    0 => "En attente",
                    1 => "Accepté",
                    2 => "Refusé",
                    _ => "Inconnu"
                };
                <span>@statutText</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Message.Text?.Replace("\n", "<br />"))
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Index" class="btn btn-secondary">Retour à la liste</a>
</div>
